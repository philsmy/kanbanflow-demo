<div id="<%= dom_id column %>">
  <div class="flex-shrink-0 w-75 bg-gray-100 p-4 rounded shadow">
    <div id="<%= dom_id column, :header %>">
      <h3 class="text-xl font-semibold mb-4"><%= column.name %> (<%= column.visual_signals.count %>)
        <%= form_with url: column_visual_signals_path(column), method: :post, remote: true, class: 'inline' do |form| %>
          <%= form.hidden_field "visual_signal[title]", value: 'Gubbins' %>
          <%= button_tag(type: 'submit', class: "ml-4 text-blue-500 bg-transparent border-none p-0", title: "Add new Signal") do %> <i class="fa-duotone fa-plus"></i> <% end %>
        <% end %>
      </h3>
    </div>
    <div id="<%= dom_id column, :visual_signals %>">
      <% column.visual_signals.each do |signal| %>
        <%= render signal %>
      <% end %>
    </div>
    <% if column.work_in_progress_limit %>
      <p class="text-sm text-gray-600">WIP Limit: <%= column.work_in_progress_limit.limit %></p>
    <% end %>
  </div>
</div>
