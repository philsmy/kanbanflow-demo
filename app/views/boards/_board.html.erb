<div id="<%= dom_id board %>">
  <div class="mb-8">
    <h2 class="text-2xl font-bold mb-4">
      <%= board.name %>
      <%= form_with url: board_columns_path(board), method: :post, remote: true, class: 'inline' do |form| %>
        <%= form.hidden_field "column[name]", value: 'Static Column Name' %>
        <%= button_tag(type: 'submit', class: "ml-4 text-blue-500 bg-transparent border-none p-0", title: "Add new column") do %> <i class="fa-duotone fa-plus"></i> <% end %>
      <% end %>      
    </h2>
    <div id="<%= dom_id board, :columns %>" class="flex space-x-4 overflow-x-auto">
      <% board.columns.each do |column| %>
        <%= turbo_stream_from column %>
        <%= render column %>
      <% end %>
    </div>
    <% if board.commitment_point %>
      <p class="text-sm text-gray-600 mt-4">Commitment Point: <%= board.commitment_point.name %></p>
    <% end %>
    <% if board.delivery_point %>
      <p class="text-sm text-gray-600 mt-2">Delivery Point: <%= board.delivery_point.name %></p>
    <% end %>
  </div>
</div>
